		{
			"name": "Criar uma nova clínica - 201 Created",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Verificar status 201 - Clínica Criada\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(201);\r",
							"});\r",
							"\r",
							"let response = pm.response.json();\r",
							"pm.environment.set(\"clinic_id\", response.id);\r",
							"console.log(\"Clinic ID salvo: \" + response.id);\r",
							"\r",
							"// Capturar o address_id\r",
							"if (response.addresses_set.length > 0) {\r",
							"    pm.environment.set(\"address_id\", response.addresses_set[0].id);\r",
							"    console.log(\"Address ID salvo: \" + response.addresses_set[0].id);\r",
							"}\r",
							"\r",
							"// Capturar o affiliated_address_id\r",
							"if (response.affiliated_addresses_set.length > 0) {\r",
							"    pm.environment.set(\"affiliated_address_id\", response.affiliated_addresses_set[0].id);\r",
							"    console.log(\"Affiliated Address ID salvo: \" + response.affiliated_addresses_set[0].id);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Resetar IDs antes da criação\r",
							"pm.environment.unset(\"clinic_id\");\r",
							"pm.environment.unset(\"address_id\");\r",
							"pm.environment.unset(\"affiliated_address_id\");\r",
							"pm.environment.unset(\"billing_id\");\r",
							"console.log(\"IDs resetados.\");\r",
