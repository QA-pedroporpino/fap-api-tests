		{
			"name": "Obter uma Clínica por ID - 200 OK",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Verificar status 200 - Clínica Obtida\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(200);\r",
							"});\r",
							"\r",
							"let response = pm.response.json();\r",
							"\r",
							"// Validar Clinic ID\r",
							"pm.test(\"Validar Clinic ID\", function () {\r",
							"    pm.expect(response.id).to.equal(parseInt(pm.environment.get(\"clinic_id\")));\r",
							"});\r",
							"\r",
							"// Validar Address ID\r",
							"pm.test(\"Validar Address ID\", function () {\r",
							"    let addressId = pm.environment.get(\"address_id\");\r",
							"    let addressFound = response.addresses_set.some(addr => addr.id === parseInt(addressId));\r",
							"    pm.expect(addressFound).to.be.true;\r",
							"});\r",
							"\r",
							"// Validar Affiliated Address ID\r",
							"pm.test(\"Validar Affiliated Address ID\", function () {\r",
							"    let affiliatedAddressId = pm.environment.get(\"affiliated_address_id\");\r",
							"    let affiliatedAddressFound = response.affiliated_addresses_set.some(addr => addr.id === parseInt(affiliatedAddressId));\r",
							"    pm.expect(affiliatedAddressFound).to.be.true;\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"if (!pm.environment.get(\"clinic_id\")) {\r",
							"    throw new Error(\"Clinic ID não definido. Execute o POST primeiro.\");\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
